}

∥ #########################################################################

函数 主窗口(双字 hInst,双字 hPrevInst,双字 CmdLine,双字 CmdShow)
{
      WNDCLASSEX wc      
      双字 Wwd,Wht,Wtx,Wty
      字节 clBufferE128

      ∥==================================================
      ∥ 为创建主窗口,填充 WNDCLASSEX 结构变量
      ∥==================================================

      LoadIcon(hInst,500)    ∥ icon ID
      hIcon = 累加32

      wc.cbSize =         取大小 WNDCLASSEX
      wc.style =          CS_HREDRAW | CS_VREDRAW | CS_BYTEALIGNWINDOW
      wc.lpfnWndProc =    主窗口过程
      wc.cbClsExtra =     NULL
      wc.cbWndExtra =     NULL
      压栈 hInst
      出栈 wc.hInstance
      获取固有对象(HOLLOW_BRUSH)
      wc.hbrBackground =  累加32
      wc.lpszMenuName =   NULL
      wc.lpszClassName =  取地址 szClassName
      压栈 hIcon
      出栈 wc.hIcon          
      LoadCursor(NULL,IDC_ARROW)
      wc.hCursor =         累加32
      压栈 hIcon
      出栈 wc.hIconSm 

      累加32 @= wc
      RegisterClassEx(累加32)

      ∥================================
      ∥ 计算窗口位置
      ∥================================

      Wwd = 500
      Wht = 350

      获取系统度量(SM_CXSCREEN)
      TopXY(Wwd,累加32)
      Wtx = 累加32

      获取系统度量(SM_CYSCREEN)
      TopXY(Wht,累加32)
      Wty = 累加32

     
      高级创建窗体(WS_EX_LEFT,取地址 szClassName,取地址 szUntitled,WS_OVERLAPPEDWINDOW,Wtx,Wty,Wwd,Wht,NULL,NULL,hInst,NULL)
      hWnd = 累加32

      加载菜单(hInst,600)  ∥ 菜单 ID
      设置菜单(hWnd,累加32)

      GetAppPath(取地址 PthBuffer)

      累加32 @= clBuffer
      GetCL(1, 累加32) ∥如果函数操作成功返回值为1       
      如果(累加32 == 1)
      {
         累加32 @= clBuffer
         读入文件(累加32,hEdit)
      }

      显示窗体(hWnd,SW_SHOWNORMAL)
      更新窗体(hWnd)

      ∥===================================
      ∥ 消息循环
      ∥===================================
      MSG 消息
      循环(TRUE)
      {         
         累加32 @= 消息
         获取消息(累加32 ,0,0,0)
        如果(累加32 == 0)
        {
          跳出
        }
        累加32 @= 消息
        消息翻译(累加32)
        累加32 @= 消息
        消息调度(累加32)
      }

      返回 消息.wParam
}

∥ #########################################################################

函数 主窗口过程(双字 hWin,双字 uMsg,双字 wParam,双字 lParam)
{
    双字  var
    双字  caW
    双字  caH
    双字  tbh
    双字  sbh
    双字  wWid
    双字  wHgt
    双字  hDC
    RECT Rct
    TBADDBITMAP tbab
    TBBUTTON tbb
    字节 buffer1E128  ∥ 分配两块分别为128字节的内存缓冲区
    字节 buffer2E128  

    如果(uMsg == WM_COMMAND)
    {
        ∥======== 工具条命令 ========

        如果(wParam == 50)
        {
            跳转到 New_File
        }
        否则如果(wParam == 51)
        {
            跳转到 Open_File
        }
        否则如果(wParam == 52)
        {
            保存文件()
        }
        否则如果(wParam == 53)
        {
            跳转到 Edit_Cut
        }
        否则如果(wParam == 54)
        {
            跳转到 Edit_Copy
        }
        否则如果(wParam == 55)
        {
            跳转到 Edit_Paste
        }
        否则如果(wParam == 56)
        {
            跳转到 Edit_Undo
        }

        ∥======== 菜单命令 ========
        如果(wParam == 1000)
        {
           标签 New_File:
           发送消息(hEdit,EM_GETMODIFY,0,0)
           如果(累加32 == TRUE)
           {
               验证对话框(hWin)
               如果(累加32 == IDYES)
               {
                   保存文件()
               }
               否则如果(累加32 == IDCANCEL)
               {
                  累加32 = 0
                  返回
               }
           }

           SetWindowText(hEdit,NULL)
           SetWindowText(hWin,取地址 szUntitled)
           发送消息(h状态栏句柄,SB_SETTEXT,2,NULL)
        }
        否则如果(wParam == 1001)
        {
           标签 Open_File:
           发送消息(hEdit,EM_GETMODIFY,0,0)
           如果(累加32 == TRUE)
           {
                验证对话框(hWin)
                如果(累加32 == IDYES)
                {
                   保存文件()
                }
                否则如果(累加32 == IDCANCEL)
                {
                  返回 0
                }
            }           
    
           填充缓冲区(取地址 szFileName,取大小 szFileName,0)
           获得要打开的文件名(hWin,取地址 szTitleO,取地址 szFilterO)
    
           如果(szFileName：0 != 0)   ∥<< zero if cancel pressed in dlgbox
           {           
              读入文件(取地址 szFileName,hEdit)
              SetWindowText(hWin,取地址 szFileName)
           }
        }
        否则如果(wParam == 1002)
        { 
            保存文件()
        }
        否则如果(wParam == 1003)
        {
            文件另存为()
        }

        如果(wParam == 1010)
        {
            发送消息(hWin,WM_SYSCOMMAND,SC_CLOSE,NULL)
        }
        否则如果(wParam == 1900)
        {
           关于对话框()
        }

        如果(wParam == 1100)
        {
           标签 Edit_Undo:
           发送消息(hEdit,WM_UNDO,0,0)
        }
        否则如果(wParam == 1101)
        {
           标签 Edit_Cut:
           发送消息(hEdit,WM_CUT,0,0)
        }
        否则如果(wParam == 1102)
        {
           标签 Edit_Copy:
           发送消息(hEdit,WM_COPY,0,0)
        }
        否则如果(wParam == 1103)
        {
           标签 Edit_Paste:
           发送消息(hEdit,WM_PASTE,0,0)
        }
        否则如果(wParam == 1104)
        {
           发送消息(hEdit,WM_CLEAR,0,0)
        }
        否则如果(wParam == 1105)
        {
           WordWrap()
        }

    ∥====== 菜单命令结束 ======
    }
    否则如果(uMsg == WM_SETFOCUS)
    {
        SetFocus(hEdit)
    }
    否则如果(uMsg == WM_SYSCOLORCHANGE)
    {
        构建工具条(hWin,750)
    }
    否则如果(uMsg == WM_CREATE)
    {
        构建工具条(hWin,750)
        构建状态栏(hWin)

        WrapFlag = 0

        构建编辑控件(NULL,0,30,300,200,hWin,700,WrapFlag)
        hEdit = 累加32

        SetWindowLong(hEdit,GWL_WNDPROC,EditProc)
        lpEditProc = 累加32
        
        发送消息(h状态栏句柄,SB_SETTEXT,1,取地址 OFFWrap)
    }
    否则如果(uMsg == WM_SIZE)
    {
        发送消息(h工具条句柄,TB_AUTOSIZE,0,0)
        移动窗体(h状态栏句柄,0,0,0,0,TRUE)

        累加32 @= Rct
        获取客户区矩形(h工具条句柄,累加32)
        压栈 Rct.bottom
        出栈 tbh     ∥ 工具条高度

        累加32 @= Rct
        获取客户区矩形(h状态栏句柄,累加32)
        压栈 Rct.bottom
        出栈 sbh     ∥ 状态栏高度

        累加32 @= Rct
        获取客户区矩形(hWin,累加32)
        压栈 Rct.right
        出栈 wWid
        压栈 Rct.bottom
        出栈 wHgt

        累加32 =  tbh
        wHgt -= 累加32
        累加32 =  sbh
        wHgt -= 累加32

        tbh += 2
        wHgt -= 2

        移动窗体(hEdit,0,tbh,wWid,wHgt,TRUE)
    }
    否则如果(uMsg == WM_CLOSE)
    {
          发送消息(hEdit,EM_GETMODIFY,0,0)
          如果(累加32 == TRUE)
          {
              验证对话框(hWin)
              如果(累加32 == IDYES)
              {
                  保存文件()
              }
              否则如果(累加32 == IDCANCEL)
              {
                  返回 0
              }
          }
    }
    否则如果(uMsg == WM_DESTROY)
    {
        邮送退出消息(NULL)
        返回 0 
    }

    默认窗体过程(hWin,uMsg,wParam,lParam)
}

∥ ########################################################################

函数 TopXY(双字 wDim,双字 sDim)
{
    sDim 逻辑右移 1      ∥ divide screen dimension by 2
    wDim 逻辑右移 1      ∥ divide window dimension by 2
    累加32 = wDim        ∥ copy window dimension into 累加32
    sDim -= 累加32       ∥ sub half win dimension from half screen dimension

    返回 sDim
}

